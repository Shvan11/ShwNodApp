{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./config/*"],
      "@services/*": ["./services/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@middleware/*": ["./middleware/*"],
      "@types/*": ["./types/*"]
    },
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "config/**/*.ts",
    "services/**/*.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
