# Environment Variables Example
# Copy this file to .env.development for local development
# Copy this file to .env.production for production builds

# Development API Server URL (Express backend)
VITE_API_URL=http://localhost:3000

# Development WebSocket Server URL
VITE_WS_URL=ws://localhost:3000

# Development server port (Vite)
VITE_DEV_PORT=5173

# Production: Leave empty to auto-detect from window.location
# VITE_API_URL=
# VITE_WS_URL=

# ============================================
# Authentication Configuration
# ============================================
# Generate a secure session secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-secret-here-change-this-in-production

# Enable/disable authentication (set to 'true' to require login for all API endpoints)
AUTHENTICATION_ENABLED=false

# Session settings
SESSION_MAX_AGE=604800000  # 7 days in milliseconds (default)
SESSION_SECURE=false       # Set to true in production with HTTPS
