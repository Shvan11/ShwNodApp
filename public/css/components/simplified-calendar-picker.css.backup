/**
 * Appointment Form - CLEAN REWRITE
 * Full-page 3-column layout
 */

/* ==================== PAGE LAYOUT ==================== */

.appointment-form-page {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #f5f6fa;
    display: flex;
    flex-direction: column;
    z-index: 9999;
}

/* Page Header - SCOPED */
.appointment-form-page .page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 20px 30px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.appointment-form-page .page-header h1 {
    margin: 0;
    font-size: 24px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
}

.appointment-form-page .page-header p {
    margin: 4px 0 0 0;
    font-size: 14px;
    opacity: 0.9;
}

.appointment-form-page .close-button {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 18px;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.appointment-form-page .close-button:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.1);
}

/* Main Content: 3 Columns - SCOPED to appointment form only */
.appointment-form-page .page-content {
    flex: 1;
    display: grid;
    grid-template-columns: 360px minmax(500px, 800px) 350px;
    gap: 0;
    overflow: hidden;
}

/* ==================== LEFT COLUMN: CALENDAR ==================== */

.calendar-column {
    background: white;
    border-right: 1px solid #e1e4e8;
    padding: 20px;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

.calendar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
}

.month-nav-btn {
    background: #f5f6fa;
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    cursor: pointer;
    color: #4a5568;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.month-nav-btn:hover {
    background: #667eea;
    color: white;
}

.month-name {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    color: #2d3748;
}

.calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    margin-bottom: 8px;
}

.weekday {
    text-align: center;
    font-size: 11px;
    font-weight: 600;
    color: #718096;
    padding: 4px 0;
}

.calendar-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    margin-bottom: 16px;
}

.calendar-day {
    aspect-ratio: 1;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-size: 13px;
    font-weight: 500;
    background: #f7fafc;
    color: #4a5568;
    transition: all 0.2s;
}

.calendar-day.empty {
    background: transparent;
}

.calendar-day.past {
    opacity: 0.4;
    cursor: not-allowed;
}

.calendar-day.today {
    background: #e3f2fd;
    color: #1976d2;
    font-weight: 600;
}

.calendar-day.has-slots {
    background: #e8f5e9;
    color: #2e7d32;
}

.calendar-day.selected {
    background: #667eea;
    color: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
}

.calendar-day.clickable {
    cursor: pointer;
}

.calendar-day.clickable:hover {
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.day-num {
    position: relative;
    z-index: 1;
}

.slot-count {
    position: absolute;
    top: 2px;
    right: 2px;
    background: #43a047;
    color: white;
    font-size: 9px;
    font-weight: 700;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.today-btn {
    background: #f5f6fa;
    border: none;
    padding: 10px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    color: #4a5568;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
}

.today-btn:hover {
    background: #667eea;
    color: white;
}

/* ==================== MIDDLE COLUMN: SCHEDULE ==================== */

.schedule-column {
    background: #fafbfc;
    padding: 20px;
    overflow-y: auto;
    border-right: 1px solid #e1e4e8;
}

.empty-state {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #718096;
    text-align: center;
    gap: 12px;
}

.empty-state i {
    font-size: 48px;
    opacity: 0.5;
}

.empty-state.error {
    color: #e53e3e;
}

.schedule-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 2px solid #e1e4e8;
}

.schedule-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #2d3748;
}

.available-count {
    background: #667eea;
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
}

/* Slots Grid: 2 columns */
.slots-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
}

/* Afternoon slots toggle */
.afternoon-toggle {
    background: #f7fafc;
    border: 2px dashed #cbd5e0;
    border-radius: 8px;
    padding: 10px 14px;
    margin: 12px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    transition: all 0.2s;
    grid-column: 1 / -1;
}

.afternoon-toggle:hover {
    background: #edf2f7;
    border-color: #a0aec0;
}

.afternoon-toggle-text {
    font-size: 13px;
    font-weight: 600;
    color: #4a5568;
    display: flex;
    align-items: center;
    gap: 8px;
}

.afternoon-toggle-icon {
    color: #718096;
    transition: transform 0.2s;
}

.afternoon-toggle-icon.expanded {
    transform: rotate(180deg);
}

.time-slot {
    background: white;
    border: 2px solid #e1e4e8;
    border-radius: 8px;
    padding: 12px;
    transition: all 0.2s;
}

.time-slot.clickable {
    cursor: pointer;
}

.time-slot.available {
    border-color: #43a047;
    background: #f1f8f4;
}

.time-slot.available:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(67, 160, 71, 0.2);
}

.time-slot.booked {
    border-color: #1976d2;
    background: #f3f8fd;
}

.time-slot.booked:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(25, 118, 210, 0.2);
}

.time-slot.full {
    border-color: #ffa726;
    background: #fff8f0;
    opacity: 0.7;
    cursor: not-allowed;
}

.time-slot.past {
    opacity: 0.5;
    cursor: not-allowed;
}

.slot-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
}

.slot-time {
    font-size: 15px;
    font-weight: 700;
    color: #2d3748;
}

.add-more {
    background: #43a047;
    color: white;
    font-size: 10px;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    gap: 4px;
}

.slot-appointments {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.apt-item {
    background: rgba(255, 255, 255, 0.8);
    padding: 6px 8px;
    border-radius: 4px;
    border-left: 3px solid #1976d2;
}

.apt-name {
    font-size: 12px;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 2px;
}

.apt-type {
    font-size: 11px;
    color: #718096;
}

.slot-empty {
    color: #43a047;
    font-size: 13px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
}

/* ==================== RIGHT COLUMN: FORM ==================== */

.form-column {
    background: white;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

.form-header {
    background: #f7fafc;
    padding: 20px;
    border-bottom: 2px solid #e1e4e8;
}

.form-header h2 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #2d3748;
    display: flex;
    align-items: center;
    gap: 8px;
}

.appointment-form {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex: 1;
}

.alert {
    padding: 12px 14px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
}

.alert-error {
    background: #fff5f5;
    border: 1px solid #fc8181;
    color: #c53030;
}

.form-field {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-field label {
    font-size: 13px;
    font-weight: 600;
    color: #4a5568;
    display: flex;
    align-items: center;
    gap: 6px;
}

.form-field label i {
    color: #667eea;
    font-size: 14px;
}

.selected-time {
    background: #f7fafc;
    border: 2px solid #e1e4e8;
    padding: 12px 14px;
    border-radius: 8px;
    color: #718096;
    font-size: 14px;
}

.selected-time.has-value {
    background: #e8f5e9;
    border-color: #43a047;
    color: #2e7d32;
    font-weight: 600;
}

.form-field select {
    background: white;
    border: 2px solid #e1e4e8;
    padding: 12px 14px;
    border-radius: 8px;
    font-size: 14px;
    color: #2d3748;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
}

.form-field select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-field select.error {
    border-color: #fc8181;
    background: #fff5f5;
}

.field-error {
    color: #c53030;
    font-size: 12px;
    font-weight: 500;
}

.form-actions {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 10px;
    margin-top: auto;
    padding-top: 20px;
    border-top: 2px solid #e1e4e8;
}

.btn {
    padding: 12px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-family: inherit;
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-cancel {
    background: white;
    color: #4a5568;
    border: 2px solid #e1e4e8;
}

.btn-cancel:hover:not(:disabled) {
    background: #f7fafc;
    border-color: #cbd5e0;
}

.btn-create {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.btn-create:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

/* ==================== RESPONSIVE ==================== */

@media (max-width: 1600px) {
    .page-content {
        grid-template-columns: 340px minmax(450px, 700px) 330px;
    }
}

@media (max-width: 1400px) {
    .page-content {
        grid-template-columns: 320px minmax(400px, 600px) 320px;
    }
}

@media (max-width: 1200px) {
    .page-content {
        grid-template-columns: 300px 1fr 300px;
    }

    .slots-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 992px) {
    .page-content {
        grid-template-columns: 1fr;
    }

    .calendar-column,
    .schedule-column {
        border-right: none;
        border-bottom: 1px solid #e1e4e8;
    }

    .slots-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .page-header h1 {
        font-size: 20px;
    }

    .slots-grid {
        grid-template-columns: 1fr;
    }

    .form-actions {
        grid-template-columns: 1fr;
    }
}

/* ==================== CALENDAR PICKER CONTAINER ==================== */

.calendar-picker-container {
    display: contents;
}
